{
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 280
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "a11y": {
                "all": false
            },
            "complexity": {
                "useArrowFunction": "off",
                "noForEach": "off"
            },
            "style": {
                "noUselessElse": "off",
                "noParameterAssign": "off"
            }
        }
    },
    "organizeImports": {
        "enabled": false
    }
}